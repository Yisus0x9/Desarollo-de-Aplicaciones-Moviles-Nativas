<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtFirstNumber" tools:layout_editor_absoluteY="55dp"
            tools:layout_editor_absoluteX="5dp" android:hint="Ingresa un número" android:textSize="24sp"
            android:textColorHighlight="#D30606" android:textColorHint="#E90A0A" android:textColorLink="#FD0606"
            tools:ignore="MissingConstraints"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="132dp"
            tools:layout_editor_absoluteX="5dp" android:hint="Ingresa un número" android:id="@+id/txtSecondNumber"
            android:textSize="24sp" tools:ignore="MissingConstraints"/>
    <Button
            android:text="sumar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonPlus" tools:layout_editor_absoluteY="213dp"
            tools:layout_editor_absoluteX="5dp" android:textSize="20sp" android:textColorLink="#5B5959"
            android:background="#5B5B5B" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Resultado :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtResult" tools:layout_editor_absoluteY="224dp"
            tools:layout_editor_absoluteX="143dp" android:textSize="20sp" tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>